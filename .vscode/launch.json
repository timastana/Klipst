  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run cli",
      "program": "${workspaceFolder}/cli/src/index.js",
      "args": ["dev"],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Gateway",
      "port": 9225,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/",
      "remoteRoot": "/usr/app/",
      "restart": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Authenticator",
      "port": 9226,
      "address": "localhost",
